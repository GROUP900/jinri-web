.about {
  color:#b2b2b2;
  background:black;
  min-height:100vh;
}
.info{
padding:0 30rpx;
}
.info>.title {
font-weight:bold;
  display:block;
  font-size:34rpx;
  color:white;
  margin:30rpx 0 16rpx 0;
}
.info>.guide {
  font-size:26rpx;
  margin-bottom:34rpx;
  display:block;
  line-height:56rpx;
}

.info > .copy{
  font-size:22rpx;
  padding-bottom:60rpx;
  display:block;
  line-height:44rpx;
  text-align:right
}

.howto {
display:flex;
color:#b2b2b2;
font-size:22rpx;
justify-content:space-between;
padding:40rpx 30rpx 24rpx 30rpx;
}
.howto>view{
text-align:center;
margin-right:80rpx;
}
image{
width:100rpx;
height:144rpx;
margin-bottom:28rpx;
display:block;
}

.flexholder{
